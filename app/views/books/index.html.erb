<div class="row">
  <div class="col-12 text-center">
    <h1>BOOKS</h1>
  </div>
  <br>
  <br>
  <br>
  <br>
  <div class="col-12">
    <h5>CSV File Import</h5>
    <%= form_tag import_books_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "インポート" %>
    <% end %>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-12">
    <% @books.each do |book| %>
      <div class="card">
        <div class="row no-gutters">
          <div class="col-4">
            NO IMAGE
          </div>
          <div class="col-8">
            <div class="card-body">
              <div class="cart-title">
                <%= book.title %>
              </div>
              <div class="cart-text">
                著:<%= book.author %>
              </div>
              <div class="cart-text">
                <%= l book.on_sale, format: '%Y年%-m月%-d日' %>に発売
              </div>
              <div class="text-right">
                <%= link_to '詳細情報を見る', book_path(book), class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
