<header class="blog-header py-3 bg-dark">
  <div class="container">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <%= link_to 'Bookshelf', root_path, class: "text-white" %>
        <% if logged_in? %>
          <%= link_to '書籍一覧', books_path, class: 'btn btn-sm btn-secondary' %>
          <%= link_to '社員一覧', admin_users_path, class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
      </div>
      <div class="col-4 text-center text-white">Admin Mode</div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-sm btn-outline-secondary' %>
      </div>
    </div>
  </div>
</header>