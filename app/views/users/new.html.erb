<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1>SIGNUP</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :department_id, '部署を選択' %><br>
          <%= f.collection_select :department_id, Department.all, :id, :name,
          { include_blank: false, selected: @user.department_id }, { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.label :name, '氏名' %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :employee_id, '社員番号' %><br>
          <%= f.text_field :employee_id, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><br>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード' %><br>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード(確認用)' %><br>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :is_valid, '在籍' %><br>
          <%= f.select :is_valid, {"在籍中": true,"退職済": false }, { class: 'form-control' } %>
        </div>
        <%= f.submit "新規登録" , class: "btn btn-success"  %>
      <% end %>
    </div>
  </div>
</div>