<div class="row">
  <div class="col-12 text-center">
    <h1>USERS</h1>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <h2>NEW USER</h2>
    <%= link_to 'New User', new_admin_user_path, class: 'btn btn-info' %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-12">
    <% @users.each do |user| %>
      <div class="card">
        <div class="row no-gutters">
          <div class="col-4">
            NO IMAGE
          </div>
          <div class="col-8">
            <div class="card-body">
              <div class="cart-title">
                <%= user.name %>(<%= user.department.anagram %>)
              </div>
              <div class="cart-text">
                <%= user.department.name %>部
              </div>
              <div class="cart-text">
                <%= user.email %>
              </div>
              <div class="text-right">
                <%= link_to 'プロフィール詳細', admin_user_path(user), class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
