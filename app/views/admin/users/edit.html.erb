<div class="row">
  <div class="col-12 text-center">
    <h1>プロフィールを編集する</h1>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= form_with method: :patch, scope: :user, url: admin_user_url(@user), local: true do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="form-group">
        <%= f.label :department_id, '部署を選択' %><br>
        <%= f.collection_select :department_id, Department.all, :id, :name,
        { include_blank: false, selected: @user.department_id }, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :name, '氏名' %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :employee_id, '社員番号' %><br>
        <%= f.text_field :employee_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <%= f.submit "情報更新" , class: "btn btn-success"  %>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-12 text-right">
    <%= link_to 'プロフィールに戻る', admin_user_path(@user), class: 'btn btn-primary' %><br>
    <br>
    <%= link_to 'ユーザーの一覧に戻る', admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>